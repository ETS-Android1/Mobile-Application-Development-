<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/textInput"
        android:layout_width="393dp"
        android:layout_height="161dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="15dp"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:textColor="@color/purple_200"
        android:hint="Type a message here" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="10"
        >

        <Button
            android:textAllCaps="false"
            android:id="@+id/q"
            android:layout_width="42sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text=" q" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/w"
            android:layout_width="42sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text=" w" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/e"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text=" e" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/r"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:text=" r" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/t"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text=" t"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/y"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="5"
            android:text=" y"
            />

        <Button
            android:textAllCaps="false"
            android:id="@+id/u"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:text=" u" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/i"
            android:layout_width="38sp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="7"
            android:text=" i" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/o"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="8"
            android:text=" o" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/p"
            android:layout_width="41sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="9"
            android:text=" p" />
    </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="9"
            android:layout_marginLeft="8dp"
            >
        <Button
            android:textAllCaps="false"
            android:id="@+id/a"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="0"
            android:text=" a" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/s"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="1"
            android:text=" s" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/d"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="2"
            android:text=" d" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/f"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="3"
            android:text=" f" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/g"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="4"
            android:text=" g" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/h"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="5"
            android:text=" h" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/j"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="6"
            android:text=" j" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/k"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="7"
            android:text=" k" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/l"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="8"
            android:text=" l"
            />
    </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="9"
            android:paddingLeft="8dp"
            >

            <Button
                android:id="@+id/caps"
                android:layout_width="38sp"
                android:layout_height="56sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="1sp"
                android:layout_marginTop="10dp"

                android:textAlignment="center"
                android:textAllCaps="false"
                app:icon="@drawable/ic_caps"
                app:iconGravity="textEnd"
                app:iconTint="#E8E0E0 " />
        <Button
            android:textAllCaps="false"
            android:id="@+id/z"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="1"
            android:text=" z" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/x"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="2"
            android:text=" x"
            />

        <Button
            android:textAllCaps="false"
            android:id="@+id/c"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="3"
            android:text=" c" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/v"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="4"
            android:text=" v" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/b"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="5"
            android:text=" b" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/n"
            android:layout_width="42sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="6"
            android:text=" n" />
        <Button
            android:textAllCaps="false"
            android:id="@+id/m"
            android:layout_width="44sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_margin="1sp"
            android:layout_column="7"
            android:text=" m" />

            <Button
            android:textAllCaps="false"
                android:id="@+id/bs"
                android:layout_width="38sp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_marginTop="10dp"
                android:layout_margin="1sp"
                app:icon="@drawable/ic_del"
                app:iconGravity="textStart"
                app:iconTint="#FDFCFC " />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="5"
        android:paddingLeft="20dp">
        <Button
            android:textAllCaps="false"
            android:id="@+id/num"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="1sp"
            android:text="123"
            />
        <Button
            android:textAllCaps="false"
            android:id="@+id/comma"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1sp"
            android:text=","/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/space"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="1sp"
            app:icon="@drawable/ic_space"
            android:textAlignment="center"
            app:iconGravity="textStart" 
            />
        <Button
            android:textAllCaps="false"
            android:id="@+id/dot"
            android:layout_width="38sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="1sp"
            android:text="."
             />

        <Button
            android:textAllCaps="false"
            android:id="@+id/enter"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="1sp"
            app:icon="@drawable/ic_enter"
            app:iconGravity="start"
            app:iconTint="#FBF6F6 " />
    </GridLayout>
    </LinearLayout>
</RelativeLayout>
