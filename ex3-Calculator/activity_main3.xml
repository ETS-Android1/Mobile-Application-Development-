<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:textColor="@color/purple_200"
        android:hint="Type a message here"
        android:id="@+id/textInput"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="10"
            >

            <Button

                android:id="@+id/one"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text=" 1" />

            <Button

                android:id="@+id/two"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text=" 2" />

            <Button
                android:id="@+id/three"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text=" 3" />

            <Button
                android:id="@+id/four"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:text=" 4" />

            <Button
                android:id="@+id/five"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:text=" 5"/>
            <Button
                android:id="@+id/six"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="5"
                android:text=" 6" />

            <Button
                android:id="@+id/seven"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="6"
                android:text=" 7" />
            <Button
                android:id="@+id/eight"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="7"
                android:text=" 8" />
            <Button
                android:id="@+id/nine"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="8"
                android:text=" 9" />
            <Button
                android:id="@+id/zero"
                android:layout_width="41sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="9"
                android:text=" 0" />

            <Button

                android:id="@+id/at"
                android:layout_width="43sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text=" \@" />

            <Button

                android:id="@+id/ash"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text=" #" />

            <Button
                android:id="@+id/rupee"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:text=" â‚¹" />

            <Button

                android:id="@+id/us"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:text=" _" />
            <Button

                android:id="@+id/and"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="4"
                android:text=" &amp;" />

            <Button

                android:id="@+id/hiphen"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="5"
                android:text=" -" />
            <Button
                android:id="@+id/plus"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_margin="1sp"
                android:layout_column="6"
                android:text=" +" />
            <Button

                android:id="@+id/openPara"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="7"
                android:text=" (" />
            <Button
                android:id="@+id/closePara"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="8"
                android:text=" )" />
            <Button
                android:id="@+id/slash"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_margin="1sp"
                android:layout_column="9"
                android:text=" /" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="9"
            android:paddingLeft="8dp"
            >

            <Button
                android:id="@+id/sym"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="1sp"
                android:text="  =&lt;  "
                />
            <Button
                android:id="@+id/star"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="1"
                android:text=" *" />

            <Button
                android:id="@+id/doubleQuote"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="2"
                android:text=" &quot;" />

            <Button
                android:id="@+id/apostrophe"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="3"
                android:text=" &apos; " />
            <Button
                android:id="@+id/colon"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="4"
                android:text=" :"
                />

            <Button

                android:id="@+id/semiColon"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="5"
                android:text=" ;"
                />
            <Button
                android:id="@+id/exclamation"
                android:layout_width="42sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="6"
                android:text="  ! "
                />
            <Button
                android:id="@+id/question"
                android:layout_width="44sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="1sp"
                android:layout_column="7"
                android:text=" \?"
                />

            <Button
                android:id="@+id/bs"
                android:layout_width="38sp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_marginTop="10dp"
                app:icon="@drawable/ic_del"
                app:iconGravity="textStart"
                app:iconTint="#FDFCFC " />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="5"
            android:paddingLeft="20dp">
            <Button
                android:textAllCaps="false"
                android:id="@+id/abc"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="1sp"
                android:text="abc"
                />
            <Button

                android:id="@+id/comma"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="1sp"
                android:text=","/>

            <Button

                android:id="@+id/space"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="1sp"
                app:icon="@drawable/ic_space"
                android:textAlignment="center"
                app:iconGravity="textStart"
                />
            <Button

                android:id="@+id/dot"
                android:layout_width="38sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_margin="1sp"
                android:text="."
                />

            <Button

                android:id="@+id/enter"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_margin="1sp"
                app:icon="@drawable/ic_enter"
                app:iconGravity="start"
                app:iconTint="#FBF6F6 " />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
